@model MauSacResponse

@{
    ViewBag.Title = "Tạo Màu Sắc";
}

<a asp-controller="MauSac" asp-action="Index" class="link-hover">Quay lại danh sách Màu Sắc</a>
<h2>Tạo Màu Sắc</h2>

<div class="center-box">
    <form asp-controller="MauSac" asp-action="Create" method="post">

        @*TenChatLieu*@
        <div class="form-field flex">
            <div class="w-25">
                <label asp-for="TenMauSac" class="form-label pt">Tên Màu Sắc</label>
            </div>
            <div class="flex-1">
                <input asp-for="TenMauSac" class="form-input" />
                <span asp-validation-for="TenMauSac" class="text-red"></span>
            </div>
        </div>


        @*TrangThai*@
        <div class="form-field flex">
            <div class="w-25">
                <label class="form-label">Trạng Thái</label>
            </div>
            <div class="flex-1">
                @{
                    string[] status = (string[])Enum.GetNames(typeof(StatusOptions));
                }
                @foreach (string item in status)
                {
                    <input type="radio" asp-for="TrangThai" value="@item" id="@item" class="ml" />
                    <label for="@item">@item</label>
                }
                <span asp-validation-for="TrangThai" class="text-red"></span>
            </div>
        </div>

        @*MoTa*@
        <div class="form-field flex">
            <div class="w-25">
                <label asp-for="MoTa" class="form-label pt">Mô tả</label>
            </div>
            <div class="flex-1">
                <textarea asp-for="MoTa" class="form-input"></textarea>
                <span asp-validation-for="MoTa" class="text-red"></span>
            </div>
        </div>

        @*Submit*@
        <div class="form-field flex">
            <div class="w-25">
            </div>
            <div class="flex-1">
                <button class="button button-green-back">Tạo</button>

                <div asp-validation-summary="All" class="text-red"></div>

                @if (ViewBag.Errors != null)
                {
                    <div class="text-red ml">
                        <ul>
                            @foreach (string error in ViewBag.Errors)
                            {
                                <li class="ml">@error</li>
                            }
                        </ul>
                    </div>
                }
            </div>
        </div>

    </form>
</div>

@section scripts
{
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js" asp-fallback-test="window.jQuery" asp-fallback-src="~/jquery.min.js"></script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.4/jquery.validate.min.js" asp-fallback-test="window.jQuery.validator" asp-fallback-src="~/jquery.validate.min.js"></script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js" asp-fallback-test="window.jQuery.validator.unobstrusive" asp-fallback-src="~/jquery.validate.unobtrusive.min.js"></script>
}